{% if not nginx_upstreams and not nginx_proxys and not nginx_vhosts %}
    server{
        listen       80;
        server_name  localhost;
        charset utf-8;
        location / {
            root   html;
            index  index.html index.htm;
        }
        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   html;
        }
        {% if nginx_stub_status %}
	location /status 
	{
	    stub_status on;
	}  
        {% endif %}
    }
{% endif %}
